---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Terminal from "../components/SecretTerminal/SecretTerminal";
import { SITE_TITLE, SITE_DESCRIPTION, SITE_AUTHOR } from "../consts";

const { title, description, author } = {
	title: SITE_TITLE,
	description: SITE_DESCRIPTION,
	author: SITE_AUTHOR,
    ...Astro.props
};
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} author={author} />
	</head>
	<body class="terminal container">
		<Terminal client:idle />
		<Header />
		<main>
            <slot />
        </main>
        <Footer author={author} />
    </body>
</html>