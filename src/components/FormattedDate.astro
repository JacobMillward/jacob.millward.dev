---
interface Props {
	date: Date;
	[key: string]: any;
}

const { date, ...props } = Astro.props;
---

<time datetime={date.toISOString()} title={date.toISOString()} {...props}>
	{
		date.toLocaleDateString("en-us", {
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>

<style>
	time {
		cursor: pointer;
	}
</style>
